<section class="container add-product">
  <h3 class="title is-3 has-text-centered">
    Add Product
  </h3>
  <form class="box" action="/product/add" method="POST">
    <div class="field">
      <label class="label" for="name">Product Name</label>
      <div class="control">
        <input class="input" name="name" id="name" type="text" required placeholder="Product name">
      </div>
    </div>

    <div class="field">
      <label class="label" for="price">Product Price</label>
      <div class="control">
        <input class="input" name="price" id="price" type="number" required placeholder="Product price">
      </div>
    </div>

    <div class="field">
      <label class="label" for="quantity">Quantity on Hand</label>
      <div class="control">
        <input class="input" name="quantity" id="quantity" type="number" required placeholder="Quantity on hand">
      </div>
    </div>

    <div class="field">
      <label class="label" for="description">Product Description</label>
      <div class="control">
        <textarea class="textarea" name="description" id="description" required
          placeholder="Product description"></textarea>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <span class="tax-label">Taxable</span>
        <label class="radio" required>
          <input type="radio" name="taxable" value="yes" checked>
          Yes
        </label>
        <label class="radio">
          <input type="radio" name="taxable" value="no">
          No
        </label>
      </div>
    </div>

    <div class="field">
      <div class="control has-text-centered">
        <button class="button is-link">Add Product</button>
      </div>
    </div>
  </form>
</section>