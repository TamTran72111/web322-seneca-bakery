<section class="container">
  <h3 class="title is-3 has-text-centered">
    Edit product
  </h3>
  <form class="box" action="/product/edit/{{_id}}?_method=PUT" method="POST">
    <div class="field">
      <label class="label" for="title">Product Title</label>
      <div class="control">
        <input class="input" name="title" id="title" type="text" required placeholder="Product title" value={{title}}>
      </div>
      {{#if titleError }}
      <span class="has-text-danger">{{ titleError }}</span>
      {{/if}}
    </div>

    <div class="field">
      <label class="label" for="price">Product Price</label>
      <div class="control">
        <input class="input" name="price" id="price" step="0.01" type="number" required placeholder="Product price"
          value={{price}}>
      </div>
      {{#if priceError }}
      <span class="has-text-danger">{{ priceError }}</span>
      {{/if}}
    </div>

    <div class="field">
      <label class="label" for="quantity">Quantity on Hand</label>
      <div class="control">
        <input class="input" name="quantity" id="quantity" type="number" required placeholder="Quantity on hand"
          value={{quantity}}>
      </div>
      {{#if quantityError }}
      <span class="has-text-danger">{{ quantityError }}</span>
      {{/if}}
    </div>

    <div class="field">
      <label class="label" for="description">Product Description</label>
      <div class="control">
        <textarea class="textarea" name="description" id="description" required
          placeholder="Product description">{{description}}</textarea>
      </div>
      {{#if descriptionError }}
      <span class="has-text-danger">{{ descriptionError }}</span>
      {{/if}}
    </div>

    <div class="field">
      <div class="control">
        <span class="tax-label">Taxable</span>
        <label class="radio" required>
          <input type="radio" name="taxable" value="yes" {{#if taxable}}checked{{/if}}>
          Yes
        </label>
        <label class="radio">
          <input type="radio" name="taxable" value="no" {{#unless taxable}}checked{{/unless}}>
          No
        </label>
      </div>
      {{#if taxableError }}
      <span class="has-text-danger">{{ taxableError }}</span>
      {{/if}}
    </div>

    <div class="field">
      <div class="control has-text-centered">
        <button class="button is-link">Edit Product</button>
      </div>
    </div>
  </form>
</section>